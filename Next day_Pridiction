<body>
    <div class="parallax-bg" id="parallaxBg"></div>

    <div class="container">
        <header>
            <h1>Next Day Prediction</h1>
            <p class="subtitle">Discover what tomorrow holds for you</p>
        </header>

        <div class="card">
            <div class="input-group">
                <label for="name">Your Name</label>
                <input type="text" id="name" placeholder="Enter your name">
            </div>

            <div class="input-group">
                <label for="mood">Today's Mood</label>
                <select id="mood">
                    <option value="happy">Happy</option>
                    <option value="neutral">Neutral</option>
                    <option value="stressed">Stressed</option>
                    <option value="energetic">Energetic</option>
                    <option value="tired">Tired</option>
                </select>
            </div>

            <div class="input-group">
                <label for="activities">Today's Main Activities</label>
                <textarea id="activities" placeholder="Describe your main activities today..."></textarea>
            </div>

            <div class="input-group">
                <label for="goals">Tomorrow's Goals</label>
                <textarea id="goals" placeholder="What do you hope to accomplish tomorrow?"></textarea>
            </div>

            <button id="predictBtn">Predict My Next Day</button>

            <div class="processing" id="processing">
                <div class="spinner"></div>
                <p>Analyzing your data and predicting tomorrow...</p>
            </div>
        </div>

        <div class="card result-container" id="resultContainer">
            <h2 class="prediction-title">Your Next Day Prediction</h2>
            <div class="prediction-text" id="predictionText"></div>
            <div class="prediction-score" id="predictionScore"></div>
            <button id="resetBtn">Make Another Prediction</button>
        </div>

        <footer>
            <p>Next Day Prediction &copy; 2023 | This app provides entertainment purposes only</p>
        </footer>
    </div>

    <script>
        // Create parallax background elements
        const parallaxBg = document.getElementById('parallaxBg');
        for (let i = 0; i < 15; i++) {
            const item = document.createElement('div');
            item.className = 'parallax-item';
            const size = Math.random() * 60 + 20;
            item.style.width = `${size}px`;
            item.style.height = `${size}px`;
            item.style.left = `${Math.random() * 100}%`;
            item.style.top = `${Math.random() * 100}%`;
            item.style.animationDuration = `${Math.random() * 20 + 10}s`;
            item.style.animationDelay = `${Math.random() * 5}s`;
            parallaxBg.appendChild(item);
        }

        // DOM elements
        const predictBtn = document.getElementById('predictBtn');
        const resetBtn = document.getElementById('resetBtn');
        const processing = document.getElementById('processing');
        const resultContainer = document.getElementById('resultContainer');
        const predictionText = document.getElementById('predictionText');
        const predictionScore = document.getElementById('predictionScore');

        // Prediction data
        const predictions = {
            happy: [
                "Your positive energy will carry into tomorrow! Expect productive work sessions and pleasant surprises throughout the day.",
                "Your cheerful disposition will attract good opportunities. Keep an eye out for unexpected connections that could lead to exciting projects.",
                "Your happiness is contagious! Tomorrow will bring moments of joy and accomplishment in both personal and professional areas."
            ],
            neutral: [
                "Tomorrow will be a balanced day with steady progress on your tasks. Look for small moments of inspiration in routine activities.",
                "A calm and collected approach will serve you well tomorrow. Expect moderate productivity with opportunities for learning.",
                "Your neutral mindset will help you navigate tomorrow's challenges with clarity. Important decisions made today will show positive results."
            ],
            stressed: [
                "Tomorrow offers a chance to reset. Focus on one task at a time and don't hesitate to ask for help when needed.",
                "Your stress today will transform into motivation tomorrow. Tackle the most challenging tasks first thing in the morning.",
                "Take a deep breath - tomorrow will bring clarity to the issues causing stress today. Solutions will present themselves when you least expect."
            ],
            energetic: [
                "Channel that energy! Tomorrow is perfect for tackling big projects and making significant progress toward your goals.",
                "Your high energy levels will help you power through tomorrow's tasks with efficiency. Consider starting with physical activity to maintain momentum.",
                "This burst of energy will carry into tomorrow, making it an excellent day for networking, creative work, and tackling challenges head-on."
            ],
            tired: [
                "A good night's rest will rejuvenate you for tomorrow. Pace yourself and focus on quality over quantity in your work.",
                "Tomorrow will bring a fresh perspective. Listen to your body and take breaks when needed - productivity will come in waves.",
                "Your fatigue today will make way for renewed energy tomorrow. Important insights may come to you after a period of rest."
            ]
        };

        const positivityScores = {
            happy: [85, 92, 88],
            neutral: [70, 65, 72],
            stressed: [45, 55, 60],
            energetic: [90, 85, 88],
            tired: [60, 65, 58]
        };

        // Event listeners
        predictBtn.addEventListener('click', predictNextDay);
        resetBtn.addEventListener('click', resetForm);

        // Prediction function
        function predictNextDay() {
            const name = document.getElementById('name').value || "Friend";
            const mood = document.getElementById('mood').value;
            const activities = document.getElementById('activities').value;
            const goals = document.getElementById('goals').value;

            // Show processing animation
            processing.style.display = 'block';

            // Simulate processing time
            setTimeout(() => {
                // Hide processing
                processing.style.display = 'none';

                // Generate prediction
                const moodIndex = Math.floor(Math.random() * 3);
                const prediction = predictions[mood][moodIndex];
                const score = positivityScores[mood][moodIndex];

                // Customize prediction with user data
                let personalizedPrediction = prediction;
                if (activities) {
                    personalizedPrediction += ` Your activities today will influence tomorrow's outcomes positively.`;
                }
                if (goals) {
                    personalizedPrediction += ` Your focus on "${goals}" will yield noticeable progress.`;
                }

                // Display results
                predictionText.textContent = personalizedPrediction;
                predictionScore.textContent = `Positivity Score: ${score}%`;
                resultContainer.style.display = 'block';

                // Scroll to results
                resultContainer.scrollIntoView({
                    behavior: 'smooth'
                });
            }, 3000);
        }

        // Reset form function
        function resetForm() {
            document.getElementById('name').value = '';
            document.getElementById('mood').value = 'happy';
            document.getElementById('activities').value = '';
            document.getElementById('goals').value = '';
            resultContainer.style.display = 'none';
        }
    </script>
</body>


</html>
