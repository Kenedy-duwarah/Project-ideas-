    <!-- ===== Comic Bubbles ===== -->
    <div class="comic-bubble" style="top: 20%; left: 10%; width: 80px; height: 80px;">POW!</div>
    <div class="comic-bubble" style="top: 70%; right: 15%; width: 100px; height: 100px;">BAM!</div>
    <div class="comic-bubble" style="top: 40%; left: 20%; width: 60px; height: 60px;">ZAP!</div>

    <script>
        // ===== Loading Animation =====
        const loaderContainer = document.querySelector('.loader-container');
        const webLine = document.querySelector('.web-line');
        const spidermanLoader = document.querySelector('.spiderman-loader');
        const loadingText = document.querySelector('.loading-text');
        const loadingDots = document.querySelector('.loading-dots');

        // Animate the loading sequence
        const loadingTL = gsap.timeline();

        loadingTL
            .to(webLine, {
                scaleX: 1,
                duration: 1.5,
                ease: "power2.inOut"
            })
            .to(spidermanLoader, {
                x: "100vw",
                duration: 2,
                ease: "power2.inOut"
            }, 0)
            .to(loadingDots, {
                opacity: 0,
                y: -10,
                duration: 0.3,
                repeat: 5,
                yoyo: true,
                ease: "none"
            }, 0)
            .to(loaderContainer, {
                opacity: 0,
                duration: 0.5,
                delay: 0.5,
                ease: "power2.out",
                onComplete: () => {
                    loaderContainer.style.display = "none";
                    // Start all other animations after loading is complete
                    initAnimations();
                }
            });

        // ===== Initialize All Other Animations After Loading =====
        function initAnimations() {
            // Mobile Navigation
            const hamburger = document.querySelector('.hamburger');
            const navLinks = document.querySelector('.nav-links');
            const navItems = document.querySelectorAll('.nav-links li');

            hamburger.addEventListener('click', () => {
                navLinks.classList.toggle('active');
                hamburger.classList.toggle('active');
            });

            navItems.forEach(item => {
                item.addEventListener('click', () => {
                    navLinks.classList.remove('active');
                    hamburger.classList.remove('active');
                });
            });

            // Navbar Scroll Effect
            window.addEventListener('scroll', () => {
                const header = document.getElementById('header');
                if (window.scrollY > 50) {
                    header.classList.add('scrolled');
                } else {
                    header.classList.remove('scrolled');
                }
            });

            // GSAP Animations
            gsap.registerPlugin(ScrollTrigger);

            // Fade-in animation for sections
            gsap.utils.toArray('.fade-in').forEach((element) => {
                gsap.from(element, {
                    opacity: 0,
                    y: 50,
                    duration: 1,
                    scrollTrigger: {
                        trigger: element,
                        start: "top 80%",
                        toggleActions: "play none none none"
                    }
                });
            });

            // Animate skill bars
            document.querySelectorAll('.skill-progress').forEach(bar => {
                const width = bar.getAttribute('data-width');
                gsap.to(bar, {
                    width: width,
                    duration: 2,
                    ease: "power4.out",
                    scrollTrigger: {
                        trigger: bar,
                        start: "top 80%",
                        toggleActions: "play none none none"
                    }
                });
            });

            // Parallax effects for hero image
            const heroImage = document.querySelector('.hero-image');
            const profileCircle = document.querySelector('.profile-circle');

            window.addEventListener('mousemove', (e) => {
                const x = (e.clientX / window.innerWidth) * 2 - 1;
                const y = (e.clientY / window.innerHeight) * 2 - 1;

                if (heroImage) {
                    gsap.to(heroImage, {
                        x: x * 20,
                        y: y * 20,
                        duration: 1,
                        ease: "power2.out"
                    });
                }

                if (profileCircle) {
                    gsap.to(profileCircle, {
                        x: x * 10,
                        y: y * 10,
                        duration: 1,
                        ease: "power2.out"
                    });
                }
            });

            // Scroll parallax for profile circle
            if (profileCircle) {
                gsap.to(profileCircle, {
                    y: 100,
                    scrollTrigger: {
                        trigger: '#about',
                        start: "top bottom",
                        end: "bottom top",
                        scrub: true
                    }
                });
            }

            // Comic bubble animations
            const comicBubbles = document.querySelectorAll('.comic-bubble');

            comicBubbles.forEach(bubble => {
                // Random float animation
                gsap.to(bubble, {
                    y: (Math.random() * 40) - 20,
                    x: (Math.random() * 40) - 20,
                    duration: 3 + Math.random() * 4,
                    repeat: -1,
                    yoyo: true,
                    ease: "sine.inOut"
                });

                // Random scale animation
                gsap.to(bubble, {
                    scale: 1 + Math.random() * 0.3,
                    duration: 2 + Math.random() * 3,
                    repeat: -1,
                    yoyo: true,
                    ease: "sine.inOut"
                });
            });

            // Smooth Scrolling
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    e.preventDefault();

                    const targetId = this.getAttribute('href');
                    const targetElement = document.querySelector(targetId);

                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                });
            });

            // Contact Form
            const contactForm = document.getElementById('contactForm');

            if (contactForm) {
                contactForm.addEventListener('submit', function(e) {
                    e.preventDefault();

                    // Get form values
                    const name = document.getElementById('name').value;
                    const location = document.getElementById('location').value;
                    const emergency = document.getElementById('emergency').value;
                    const message = document.getElementById('message').value;

                    // Here you would typically send the form data to a server
                    console.log({
                        name,
                        location,
                        emergency,
                        message
                    });

                    // Show success message
                    alert('Spider-Signal sent! Spider-Man is on his way!');

                    // Reset form
                    contactForm.reset();
                });
            }

            // Additional loading animation for images
            const images = document.querySelectorAll('img');
            let loadedImages = 0;
            const totalImages = images.length;

            if (totalImages > 0) {
                images.forEach(img => {
                    if (img.complete) {
                        imageLoaded();
                    } else {
                        img.addEventListener('load', imageLoaded);
                        img.addEventListener('error', imageLoaded); // Also count if image fails to load
                    }
                });
            } else {
                // If no images, we're already fully loaded
            }

            function imageLoaded() {
                loadedImages++;
                // You could update a loading progress indicator here if needed
            }
        }

        // ===== Mobile Navigation =====
        const hamburger = document.querySelector('.hamburger');
        const navLinks = document.querySelector('.nav-links');
        const navItems = document.querySelectorAll('.nav-links li');

        hamburger.addEventListener('click', () => {
            navLinks.classList.toggle('active');
            hamburger.classList.toggle('active');
        });

        navItems.forEach(item => {
            item.addEventListener('click', () => {
                navLinks.classList.remove('active');
                hamburger.classList.remove('active');
            });
        });

        // ===== Navbar Scroll Effect =====
        window.addEventListener('scroll', () => {
            const header = document.getElementById('header');
            if (window.scrollY > 50) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
        });

        // ===== GSAP Animations =====
        gsap.registerPlugin(ScrollTrigger);

        // Fade-in animation for sections
        gsap.utils.toArray('.fade-in').forEach((element) => {
            gsap.from(element, {
                opacity: 0,
                y: 50,
                duration: 1,
                scrollTrigger: {
                    trigger: element,
                    start: "top 80%",
                    toggleActions: "play none none none"
                }
            });
        });

        // Animate skill bars
        document.querySelectorAll('.skill-progress').forEach(bar => {
            const width = bar.getAttribute('data-width');
            gsap.to(bar, {
                width: width,
                duration: 2,
                ease: "power4.out",
                scrollTrigger: {
                    trigger: bar,
                    start: "top 80%",
                    toggleActions: "play none none none"
                }
            });
        });

        // Parallax effects for hero image
        const heroImage = document.querySelector('.hero-image');
        const profileCircle = document.querySelector('.profile-circle');

        window.addEventListener('mousemove', (e) => {
            const x = (e.clientX / window.innerWidth) * 2 - 1;
            const y = (e.clientY / window.innerHeight) * 2 - 1;

            if (heroImage) {
                gsap.to(heroImage, {
                    x: x * 20,
                    y: y * 20,
                    duration: 1,
                    ease: "power2.out"
                });
            }

            if (profileCircle) {
                gsap.to(profileCircle, {
                    x: x * 10,
                    y: y * 10,
                    duration: 1,
                    ease: "power2.out"
                });
            }
        });

        // Scroll parallax for profile circle
        gsap.to(profileCircle, {
            y: 100,
            scrollTrigger: {
                trigger: '#about',
                start: "top bottom",
                end: "bottom top",
                scrub: true
            }
        });

        // Comic bubble animations
        const comicBubbles = document.querySelectorAll('.comic-bubble');

        comicBubbles.forEach(bubble => {
            // Random float animation
            gsap.to(bubble, {
                y: (Math.random() * 40) - 20,
                x: (Math.random() * 40) - 20,
                duration: 3 + Math.random() * 4,
                repeat: -1,
                yoyo: true,
                ease: "sine.inOut"
            });

            // Random scale animation
            gsap.to(bubble, {
                scale: 1 + Math.random() * 0.3,
                duration: 2 + Math.random() * 3,
                repeat: -1,
                yoyo: true,
                ease: "sine.inOut"
            });
        });

        // ===== Smooth Scrolling =====
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();

                const targetId = this.getAttribute('href');
                const targetElement = document.querySelector(targetId);

                window.scrollTo({
                    top: targetElement.offsetTop - 80,
                    behavior: 'smooth'
                });
            });
        });

        // ===== Contact Form =====
        const contactForm = document.getElementById('contactForm');

        contactForm.addEventListener('submit', function(e) {
            e.preventDefault();

            // Get form values
            const name = document.getElementById('name').value;
            const location = document.getElementById('location').value;
            const emergency = document.getElementById('emergency').value;
            const message = document.getElementById('message').value;

            // Here you would typically send the form data to a server
            console.log({
                name,
                location,
                emergency,
                message
            });

            // Show success message
            alert('Spider-Signal sent! Spider-Man is on his way!');

            // Reset form
            contactForm.reset();
        });
    </script>
